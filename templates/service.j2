[Unit]
Description=Starts and manages the Pacifica based {{ service }} service
After=network.target

[Service]
ExecStart={{ value.virtualenv_path|default('/opt') }}/{{ value.virtualenv|default('default') }}/{{ service }}
ExecReload=/bin/kill -HUP $MAINPID
KillSignal=TERM
Restart=on-failure
SyslogIdentifier={{ service }}
User={{ pacifica_user_name }}

[Install]
WantedBy=multi-user.target
